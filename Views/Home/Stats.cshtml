  @using SteamStats.Models
  @using System.Data
@{
    ViewBag.Title = "Stats";
}

    <br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    @{ 
                        var Player = (Player)ViewData["sapi"];
                        var pstats = ((DataTable)ViewData["playerstat"]).Rows[0];
                    }
                    <h3 class="text-center btn-default">@User.Identity.Name</h3>
                    <a href="@Player.profileurl" target="_blank"><img alt="" src="@Player.avatarfull" class="img-circle" />    </a>
                </div>
                <div class="col-md-8">
                    <br />
                    <br />
                    <table class="table table-responsive table-bordered table-striped ">
                   <tbody>

                       <tr>
                           <td>Tracker ID</td>
                           <td>@pstats["Tracker ID"].ToString()</td>
                       </tr>
                        <tr>
                       <td>Current Steam Name</td>
                       <td>@Player.personaname</td>
                       </tr>
                        <tr>
                       <td>Current IP</td>
                       <td>@pstats["Last IP Address"].ToString()</td>
                       </tr>
                       <tr>
                           <td>Profile URL</td>
                       <td><a href="@Player.profileurl" target="_blank">Click to Open</a></td>
                       </tr>
                        <tr>
                       <td>First Seen On </td>
                       <td>@pstats["First Seen On"]</td>
                       </tr>
                        <tr>
                       <td>Last Seen On</td>
                       <td>@pstats["Last Seen On"]</td>
                       </tr>
                        
                       
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <br />
            <br />
            <table class="table table-striped table-bordered">
            <thead>
             
            <tbody>
                <tr>
                <td>Kills</td>
                <td>@pstats["Kills"].ToString()</td>
                </tr>
                <tr>
                    <td>Deaths</td>
                    <td>@pstats["Deaths"].ToString()</td>
                </tr>
                <tr>
                    <td>Suicides</td>
                    <td>@pstats["Suicides"].ToString()</td>
                </tr>
                <tr>
                    <td>TeamKills</td>
                    <td>@pstats["TeamKills"].ToString()</td>
                </tr>
                <tr>
                    <td>Shots Fired</td>
                    <td>@pstats["Total Shots"].ToString()</td>
                </tr>
                <tr>
                    <td>On Target</td>
                    <td>@pstats["Total Hits"].ToString()</td>
                </tr>
                <tr>
                    <td>Accuracy</td>
                    <td>@pstats["Accuracy"].ToString() %</td>
                </tr>
                
                </tbody>
            </table>
        </div>
    </div>
</div>